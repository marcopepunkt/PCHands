        </joint>
        <joint name="joint_A_14" type="fixed">
            <child link="A_14"/>
            <parent link="finger_right"/>
            <origin xyz="0.003 0 0.120" rpy="0 0 0"/>
        </joint>
        <joint name="joint_A_15" type="fixed">
            <child link="A_15"/>
