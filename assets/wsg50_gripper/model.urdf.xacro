<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="wsg50_gripper">
    <xacro:macro name="wsg50_model" params="mimic">
        <xacro:property name="yaml_file" value="../../adf/calib_eef.yaml" />
        <xacro:property name="calib_eef" value="${load_yaml(yaml_file)['wsg50_gripper']}"/>
        <!--  palm frame  -->
        <link name="eef_link">
            <inertial>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <mass value="0.0001"/>
                <inertia ixx="1e-5" ixy="0" ixz="0" iyy="1e-5" iyz="0" izz="1e-5"/>
            </inertial>
        </link>
        <joint name="r_eef_calib_joint" type="fixed">
            <parent link="eef_link"/>
            <child link="eef_calib_link"/>
            <origin xyz="${calib_eef['tx']} ${calib_eef['ty']} ${calib_eef['tz']}" 
                    rpy="${calib_eef['rx']} ${calib_eef['ry']} ${calib_eef['rz']}"/>
        </joint>
        <link name="eef_calib_link">
            <inertial>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <mass value="0.0001"/>
                <inertia ixx="1e-5" ixy="0" ixz="0" iyy="1e-5" iyz="0" izz="1e-5"/>
            </inertial>
        </link>
        <joint name="r_eef_fixed_joint" type="fixed">
            <parent link="eef_calib_link"/>
            <child link="palm_base_link"/>
            <origin xyz="-0.072 0.0 0.0" rpy="-1.5708 0.0 -1.5708"/>
        </joint>
        <link name="palm_base_link">
            <visual>
                <geometry>
                    <mesh filename="mesh/WSG50_110.stl"/>
                </geometry>
            </visual>
            <collision>
                <geometry>
                    <mesh filename="mesh/WSG50_110.obj"/>
                </geometry>
            </collision>
            <inertial>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <mass value="0.2"/>
                <inertia ixx="1e-3" ixy="0" ixz="0" iyy="1e-3" iyz="0" izz="1e-3"/>
            </inertial>
        </link>
        <joint name="r_forearm_fixed_joint" type="fixed">
            <parent link="palm_base_link"/>
            <child link="r_forearm"/>
            <origin xyz="0 0 0" rpy="0 -1.5708 0"/>
        </joint>
		<link name="r_forearm"/>

        <joint name="r_01gripper_left" type="prismatic">
            <parent link="palm_base_link"/>
            <child link="gripper_left"/>
            <axis xyz="-1 0 0"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <limit lower="0" upper="0.055" effort="1.0" velocity="1.0"/>
        </joint>
        <link name="gripper_left">
            <visual>
                <geometry>
                    <mesh filename="mesh/GUIDE_WSG50_110.stl"/>
                </geometry>
            </visual>
            <collision>
                <geometry>
                    <mesh filename="mesh/GUIDE_WSG50_110.obj"/>
                </geometry>
            </collision>
            <inertial>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <mass value="0.05"/>
                <inertia ixx="1e-3" ixy="0" ixz="0" iyy="1e-3" iyz="0" izz="1e-3"/>
            </inertial>
        </link>
        <joint name="guide_joint_finger_left" type="fixed">
            <origin xyz="0 0 0.023" rpy="0 0 0"/>
            <parent link="gripper_left"/>
            <child link="finger_left"/>
        </joint>
        <link name="finger_left">
            <visual>
                <geometry>
                    <mesh filename="mesh/WSG-FMF.stl"/>
                </geometry>
            </visual>
            <collision>
                <geometry>
                    <mesh filename="mesh/WSG-FMF.obj"/>
                </geometry>
            </collision>
            <inertial>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <mass value="0.1"/>
                <inertia ixx="1e-3" ixy="0" ixz="0" iyy="1e-3" iyz="0" izz="1e-3"/>
            </inertial>
        </link>

        <joint name="r_02gripper_right" type="prismatic">
            <origin xyz="0 0 0" rpy="0 0 3.14159"/>
            <parent link="palm_base_link"/>
            <child link="gripper_right"/>
            <axis xyz="-1 0 0"/>
            <limit lower="0" upper="0.055" effort="1.0" velocity="1.0"/>
            <xacro:if value="${mimic}">
                <mimic joint="r_01gripper_left" multiplier="1" offset="0"/>
            </xacro:if>
        </joint>
        <link name="gripper_right">
            <visual>
                <geometry>
                    <mesh filename="mesh/GUIDE_WSG50_110.stl"/>
                </geometry>
            </visual>
            <collision>
                <geometry>
                    <mesh filename="mesh/GUIDE_WSG50_110.obj"/>
                </geometry>
            </collision>
            <inertial>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <mass value="0.05"/>
                <inertia ixx="1e-3" ixy="0" ixz="0" iyy="1e-3" iyz="0" izz="1e-3"/>
            </inertial>
        </link>
        <joint name="guide_joint_finger_right" type="fixed">
            <origin xyz="0 0 0.023" rpy="0 0 0"/>
            <parent link="gripper_right"/>
            <child link="finger_right"/>
        </joint>
        <link name="finger_right">
            <visual>
                <geometry>
                    <mesh filename="mesh/WSG-FMF.stl"/>
                </geometry>
            </visual>
            <collision>
                <geometry>
                    <mesh filename="mesh/WSG-FMF.obj"/>
                </geometry>
            </collision>
            <inertial>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <mass value="0.1"/>
                <inertia ixx="1e-3" ixy="0" ixz="0" iyy="1e-3" iyz="0" izz="1e-3"/>
            </inertial>
        </link>
    </xacro:macro>

    <xacro:macro name="wsg50_anchor">
        <!--  anchor  -->
        <link name="A_00"/>
        <link name="A_01"/>
        <link name="A_02"/>
        <link name="A_03"/>
        <link name="A_04"/>
        <link name="A_05"/>
        <link name="A_06"/>
        <link name="A_07"/>
        <link name="A_08"/>
        <link name="A_09"/>
