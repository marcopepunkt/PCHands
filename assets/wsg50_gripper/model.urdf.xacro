        </joint>
        <joint name="joint_A_19" type="fixed">
            <child link="A_19"/>
            <parent link="finger_right"/>
            <origin xyz="0 0 0.131" rpy="0 0 0"/>
        </joint>

        <!--  palm  -->
        <joint name="joint_A_20" type="fixed">
            <child link="A_20"/>
            <parent link="palm_base_link"/>
            <origin xyz="0 -0.025 0.072" rpy="0 0 0"/>
        </joint>
        <joint name="joint_A_21" type="fixed">
            <child link="A_21"/>
            <parent link="palm_base_link"/>
            <origin xyz="0 0.025 0.072" rpy="0 0 0"/>
        </joint>
    </xacro:macro>
</robot>