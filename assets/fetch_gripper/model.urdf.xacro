        </joint>
        <!--  ring  -->
        <joint name="joint_A_12" type="fixed">
            <child link="A_12"/>
            <parent link="r_gripper_finger_link"/>
            <origin xyz="-0.03 -0.103 0" rpy="0 0 0"/>
        </joint>
        <joint name="joint_A_13" type="fixed">
            <child link="A_13"/>
            <parent link="r_gripper_finger_link"/>
            <origin xyz="-0.01 -0.103 0" rpy="0 0 0"/>
        </joint>
        <joint name="joint_A_14" type="fixed">
            <child link="A_14"/>
            <parent link="r_gripper_finger_link"/>
            <origin xyz="0.01 -0.103 0" rpy="0 0 0"/>
        </joint>
        <joint name="joint_A_15" type="fixed">
            <child link="A_15"/>
            <parent link="r_gripper_finger_link"/>
            <origin xyz="0.03 -0.11 0" rpy="0 0 0"/>
        </joint>
        <!--  pink  -->
        <joint name="joint_A_16" type="fixed">
            <child link="A_16"/>
            <parent link="r_gripper_finger_link"/>
            <origin xyz="-0.03 -0.103 0" rpy="0 0 0"/>
        </joint>
        <joint name="joint_A_17" type="fixed">
            <child link="A_17"/>
            <parent link="r_gripper_finger_link"/>
            <origin xyz="-0.01 -0.103 0" rpy="0 0 0"/>
        </joint>
        <joint name="joint_A_18" type="fixed">
            <child link="A_18"/>
            <parent link="r_gripper_finger_link"/>
            <origin xyz="0.01 -0.103 0" rpy="0 0 0"/>
        </joint>
        <joint name="joint_A_19" type="fixed">
            <child link="A_19"/>
            <parent link="r_gripper_finger_link"/>
            <origin xyz="0.03 -0.11 0" rpy="0 0 0"/>
        </joint>

        <!--  palm  -->
        <joint name="joint_A_20" type="fixed">
            <child link="A_20"/>
            <parent link="palm_base_link"/>
            <origin xyz="-0.032 0 0.03" rpy="0 0 0"/>
        </joint>
        <joint name="joint_A_21" type="fixed">
            <child link="A_21"/>
            <parent link="palm_base_link"/>
            <origin xyz="-0.032 0 -0.03" rpy="0 0 0"/>
        </joint>
    </xacro:macro>
</robot>
