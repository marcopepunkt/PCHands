        </joint>
        <joint name="joint_A_02" type="fixed">
            <child link="A_02"/>
            <parent link="l_gripper_finger_link"/>
            <origin xyz="0.010 0.103 0" rpy="0 0 0"/>
        </joint>
        <joint name="joint_A_03" type="fixed">
            <child link="A_03"/>
            <parent link="l_gripper_finger_link"/>
            <origin xyz="0.03 0.11 0" rpy="0 0 0"/>
        </joint>

        <!--  index  -->
        <joint name="joint_A_04" type="fixed">
