        </joint>
        <!--  mid  -->
        <joint name="joint_A_08" type="fixed">
            <child link="A_08"/>
            <parent link="r_gripper_finger_link"/>
            <origin xyz="-0.03 -0.103 0" rpy="0 0 0"/>
        </joint>
        <joint name="joint_A_09" type="fixed">
            <child link="A_09"/>
            <parent link="r_gripper_finger_link"/>
            <origin xyz="-0.01 -0.103 0" rpy="0 0 0"/>
        </joint>
        <joint name="joint_A_10" type="fixed">
            <child link="A_10"/>
