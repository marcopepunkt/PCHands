<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="google_gripper">
    <xacro:macro name="google_model">
        <xacro:property name="yaml_file" value="../../adf/calib_eef.yaml" />
        <xacro:property name="calib_eef" value="${load_yaml(yaml_file)['google_gripper']}"/>
        <!--  palm frame  -->
        <link name="eef_link">
            <inertial>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <mass value="0.0001"/>
                <inertia ixx="1e-5" ixy="0" ixz="0" iyy="1e-5" iyz="0" izz="1e-5"/>
            </inertial>
        </link>
        <joint name="r_eef_calib_joint" type="fixed">
            <parent link="eef_link"/>
            <child link="eef_calib_link"/>
            <origin xyz="${calib_eef['tx']} ${calib_eef['ty']} ${calib_eef['tz']}" 
                    rpy="${calib_eef['rx']} ${calib_eef['ry']} ${calib_eef['rz']}"/>
        </joint>
        <link name="eef_calib_link">
            <inertial>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <mass value="0.0001"/>
                <inertia ixx="1e-5" ixy="0" ixz="0" iyy="1e-5" iyz="0" izz="1e-5"/>
            </inertial>
        </link>
        <joint name="r_eef_fixed_joint" type="fixed">
            <parent link="eef_calib_link"/>
            <child link="palm_base_link"/>
            <origin xyz="-0.075 0.0 0.0" rpy="-1.5708 0.0 -1.5708"/>
        </joint>
        <link name="palm_base_link">
            <visual>
                <geometry>
                    <mesh filename="mesh/link_gripper.stl"/>
                </geometry>
            </visual>
            <collision>
                <geometry>
                    <mesh filename="mesh/link_gripper.obj"/>
                </geometry>
            </collision>
            <inertial>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <mass value="0.2"/>
                <inertia ixx="1e-3" ixy="0" ixz="0" iyy="1e-3" iyz="0" izz="1e-3"/>
            </inertial>
        </link>
        <joint name="r_forearm_fixed_joint" type="fixed">
            <parent link="palm_base_link"/>
            <child link="r_forearm"/>
            <origin xyz="0 0 0" rpy="0 -1.5708 0"/>
        </joint>
		<link name="r_forearm"/>

        <!--  left finger  -->
        <link name="link_finger_base_left">
            <visual>
                <geometry>
                    <mesh filename="mesh/link_finger_base.stl"/>
                </geometry>
            </visual>
            <collision>
                <geometry>
                    <mesh filename="mesh/link_finger_base.obj"/>
                </geometry>
            </collision>
            <inertial>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <mass value="0.05"/>
                <inertia ixx="1e-3" ixy="0" ixz="0" iyy="1e-3" iyz="0" izz="1e-3"/>
            </inertial>
        </link>
        <joint name="r_01joint_finger_base_left" type="revolute">
            <parent link="palm_base_link"/>
            <child link="link_finger_base_left"/>
            <origin xyz="-0.025 0 0.05886" rpy="0.08 0 1.5708"/>
            <axis xyz="-1 0 0"/>
            <limit effort="100" lower="0" upper="1.1" velocity="0.2"/>
        </joint>

        <link name="link_finger_tip_left">
            <visual>
                <geometry>
                    <mesh filename="mesh/link_finger_tip.stl"/>
                </geometry>
            </visual>
            <collision>
                <geometry>
                    <mesh filename="mesh/link_finger_tip.obj"/>
                </geometry>
            </collision>
            <inertial>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <mass value="0.05"/>
                <inertia ixx="1e-3" ixy="0" ixz="0" iyy="1e-3" iyz="0" izz="1e-3"/>
            </inertial>
        </link>
        <joint name="r_02joint_finger_tip_left" type="revolute">
            <parent link="link_finger_base_left"/>
            <child link="link_finger_tip_left"/>
            <origin xyz="0 0.0004 0.0653" rpy="0 0 0"/>
            <axis xyz="1 0 0"/>
            <limit effort="100" lower="0.0" upper="0.6" velocity="0.2"/>
        </joint>

        <!--  right finger  -->
        <link name="link_finger_base_right">
            <visual>
                <geometry>
                    <mesh filename="mesh/link_finger_base.stl"/>
                </geometry>
            </visual>
            <collision>
                <geometry>
                    <mesh filename="mesh/link_finger_base.obj"/>
                </geometry>
            </collision>
            <inertial>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <mass value="0.05"/>
                <inertia ixx="1e-3" ixy="0" ixz="0" iyy="1e-3" iyz="0" izz="1e-3"/>
            </inertial>
        </link>
        <joint name="r_11joint_finger_base_right" type="revolute">
            <parent link="palm_base_link"/>
            <child link="link_finger_base_right"/>
            <origin xyz="0.025 0 0.05886" rpy="0.08 0 -1.5708"/>
            <axis xyz="-1 0 0"/>
            <limit effort="100" lower="0" upper="1.1" velocity="0.2"/>
        </joint>

        <link name="link_finger_tip_right">
            <visual>
                <geometry>
                    <mesh filename="mesh/link_finger_tip.stl"/>
                </geometry>
            </visual>
            <collision>
                <geometry>
                    <mesh filename="mesh/link_finger_tip.obj"/>
                </geometry>
            </collision>
            <inertial>
                <origin rpy="0 0 0" xyz="0 0 0"/>
                <mass value="0.05"/>
                <inertia ixx="1e-3" ixy="0" ixz="0" iyy="1e-3" iyz="0" izz="1e-3"/>
            </inertial>
        </link>
        <joint name="r_12joint_finger_tip_right" type="revolute">
            <parent link="link_finger_base_right"/>
            <child link="link_finger_tip_right"/>
            <origin xyz="0 0.0004 0.0653" rpy="0 0 0"/>
            <axis xyz="1 0 0"/>
            <limit effort="100" lower="0.0" upper="0.6" velocity="0.2"/>
        </joint>
    </xacro:macro>

    <xacro:macro name="google_anchor">
        <!--  anchor  -->
        <link name="A_00"/>
        <link name="A_01"/>
        <link name="A_02"/>
        <link name="A_03"/>
        <link name="A_04"/>
        <link name="A_05"/>
        <link name="A_06"/>
        <link name="A_07"/>
        <link name="A_08"/>
        <link name="A_09"/>
