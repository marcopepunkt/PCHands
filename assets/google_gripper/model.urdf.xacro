        <link name="A_19"/>
        <link name="A_20"/>
        <link name="A_21"/>
        <!--  thumb  -->
        <joint name="joint_A_00" type="fixed">
            <child link="A_00"/>
            <parent link="link_finger_base_left"/>
            <origin xyz="0 -0.016 0.025" rpy="0 0 0"/>
        </joint>
        <joint name="joint_A_01" type="fixed">
            <child link="A_01"/>
            <parent link="link_finger_base_left"/>
            <origin xyz="0 -0.017 0.055" rpy="0 0 0"/>
        </joint>
        <joint name="joint_A_02" type="fixed">
            <child link="A_02"/>
            <parent link="link_finger_tip_left"/>
