            <parent link="link_finger_tip_right"/>
            <origin xyz="0 -0.0174 0.028" rpy="0 0 0"/>
        </joint>
        <joint name="joint_A_19" type="fixed">
            <child link="A_19"/>
            <parent link="link_finger_tip_right"/>
            <origin xyz="0 -0.011 0.044" rpy="0 0 0"/>
        </joint>

        <!--  palm  -->
        <joint name="joint_A_20" type="fixed">
            <child link="A_20"/>
            <parent link="palm_base_link"/>
            <origin xyz="0 -0.02 0.075" rpy="0 0 0"/>
        </joint>
        <joint name="joint_A_21" type="fixed">
            <child link="A_21"/>
            <parent link="palm_base_link"/>
            <origin xyz="0 0.02 0.075" rpy="0 0 0"/>
